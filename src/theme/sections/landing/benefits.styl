
#benefits
  padding-top 4rem
  .benefit-section
    justify-items center
    text-align center
    margin-top 3rem
  .benefits-img
    height 250px
    display flex
    align-items flex-end
    text-align center
    img
      display flex
      margin auto
    p
      font-size $body-medium-font-size

.video-wrapper
  position relative
  transform translateY(50%)
  width 100%
  margin 0 auto

  @media screen and (min-width: 35em)
    margin-top -100px

#benefits-video-outer
  margin 0 auto
  max-width 800px
